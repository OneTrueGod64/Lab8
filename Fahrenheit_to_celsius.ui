<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="tk.Frame" id="main_frame">
    <property name="height">200</property>
    <property name="width">200</property>
    <layout manager="grid"/>
    <child>
      <object class="tk.Label" id="fahrenheit_label">
        <property name="text">Fahrenheit:</property>
        <layout manager="grid">
          <property name="column">0</property>
          <property name="row">0</property>
        </layout>
      </object>
      <object class="tk.Entry" id="fahrenheit_entry">
        <variable class="StringVar" name="fahrenheit_str"/>
        <layout manager="grid">
          <property name="column">0</property>
          <property name="row">0</property>
          <property name="sticky">ew</property>
        </layout>
      </object>
      <object class="tk.Button" id="convert_button">
        <property name="text">Convert</property>
        <property name="command">on_convert_clicked</property>
        <layout manager="grid">
          <property name="column">0</property>
          <property name="columnspan">2</property>
          <property name="row">1</property>
        </layout>
      </object>
      <object class="tk.Label" id="celsius_label">
        <property name="text">Celsius:</property>
        <layout manager="grid">
          <property name="column">0</property>
          <property name="row">2</property>
        </layout>
      </object>
      <object class="tk.Entry" id="celsius_result">
        <property name="state">normal</property>
        <variable class="StringVar" name="celsius_str"/>
        <layout manager="grid">
          <property name="column">1</property>
          <property name="row">2</property>
          <property name="sticky">nsew</property>
        </layout>
      </object>
    </child>
  </object>
</interface>
